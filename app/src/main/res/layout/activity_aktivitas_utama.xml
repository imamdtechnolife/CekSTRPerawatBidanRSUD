<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imamdtechnolife.cekstr.Aktivitas_utama">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Masukkan Nama"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtRuangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtNama"
            android:layout_below="@+id/txtNama"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="Masukkan Ruangan"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtRuangan"
            android:layout_below="@+id/txtRuangan"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="46dp"
            android:text="Simpan" />

        <EditText
            android:id="@+id/txt_Tampil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtRuangan"
            android:layout_below="@+id/btnSimpan"
            android:layout_marginTop="106dp"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
